<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	

	<bean id="conect" class="com.beeva.mongo.mongodemo.connection.Connection" init-method="Conectate" scope="prototype" >
	<constructor-arg name="puerto" value="27017"></constructor-arg>
	<constructor-arg name="host" value="localhost"></constructor-arg>
	</bean>

	
</beans>